        <DataTemplate x:Key="MyCustomGeometryScatterTemplate">
            <mvvmCharting:Scatter GeometryBuilder="{StaticResource MyCustomGeometryBuilder}"
                                  Fill="Purple" 
                                  RenderTransformOrigin="0.5,0.5">
                <mvvmCharting:Scatter.LayoutTransform>
                    <TransformGroup>
                        <TransformGroup.Children>
                            <ScaleTransform ScaleX="-1" ScaleY="-1" />
                        </TransformGroup.Children>
                    </TransformGroup>
                </mvvmCharting:Scatter.LayoutTransform>
            </mvvmCharting:Scatter>
        </DataTemplate>
        <mvvmCharting:RectangleBuilder x:Key="RectangleBuilder"
                                       Size="12,12"/>

        <DataTemplate x:Key="MyScatterTemplate">
            <mvvmCharting:Scatter GeometryBuilder="{StaticResource RectangleBuilder}"
                                  Fill="Red"/>
        </DataTemplate>

        <local:MyScatterTemplateSelector x:Key="MyScatterTemplateSelector"
                                         DataTemplate0="{StaticResource MyScatterTemplate}"
                                         DataTemplate1="{StaticResource MyCustomGeometryScatterTemplate}"/>

        <DataTemplate x:Key="SeriesTemplate0" DataType="local:SomePointList">
            <mvvmCharting:PolyLineSeries IndependentValueProperty="t"
                                             DependentValueProperty="Y"
                                             Stroke="CadetBlue"
                                             StrokeThickness="1.5"
                                             Visibility="{Binding IsVisible, Converter={StaticResource t2v}}"
                                             IsScatterVisible="{Binding ShowSeriesPoints}"
                                             IsLineOrAreaVisible="{Binding ShowSeriesLine}"
                                             ItemsSource="{Binding DataList}">
                <mvvmCharting:PolyLineSeries.ScatterTemplate>
                    <DataTemplate>
                        <mvvmCharting:Scatter Fill="DeepPink">
                            <RectangleGeometry Rect="0,0,14,14" >
                                <RectangleGeometry.Transform>
                                    <RotateTransform Angle="45" CenterX="7" CenterY="7"/>
                                </RectangleGeometry.Transform>
                            </RectangleGeometry>
                        </mvvmCharting:Scatter>
                    </DataTemplate>
                </mvvmCharting:PolyLineSeries.ScatterTemplate>
            </mvvmCharting:PolyLineSeries>

        </DataTemplate>

        <DataTemplate x:Key="SeriesTemplate1" DataType="local:SomePointList">
            <mvvmCharting:StepLineSeries IndependentValueProperty="t"
                                         DependentValueProperty="Y"
                                         Stroke="Red"
                                         StrokeThickness="1.5"
                                         Visibility="{Binding IsVisible, Converter={StaticResource t2v}}"
                                         IsScatterVisible="{Binding ShowSeriesPoints}"
                                         IsLineOrAreaVisible="{Binding ShowSeriesLine}"
                                         ItemsSource="{Binding DataList}"/>

        </DataTemplate>

        <DataTemplate x:Key="SeriesTemplate2" DataType="local:SomePointList">
            <mvvmCharting:SplineSeries IndependentValueProperty="t"
                                     DependentValueProperty="Y"
                                     Stroke="Green"
                                     StrokeThickness="1.5"
                                     Visibility="{Binding IsVisible, Converter={StaticResource t2v}}"
                                     IsScatterVisible="{Binding ShowSeriesPoints}"
                                     IsLineOrAreaVisible="{Binding ShowSeriesLine}"
                                     ItemsSource="{Binding DataList}"
                                     ScatterTemplate="{x:Null}"
                                     ScatterTemplateSelector="{StaticResource MyScatterTemplateSelector}">
            </mvvmCharting:SplineSeries>
        </DataTemplate>




        <local:SeriesTemplateSelector x:Key="SeriesTemplateSelector"
                                      DataTemplate0="{StaticResource SeriesTemplate0}"
                                      DataTemplate1="{StaticResource SeriesTemplate1}"
                                      DataTemplate2="{StaticResource SeriesTemplate2}"/>

    </UserControl.Resources>


    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <mvvmCharting:SeriesChart Background="Bisque"
                              SeriesTemplateSelector="{StaticResource SeriesTemplateSelector}"
                              SeriesItemsSource="{Binding ItemsSourceList, Source={StaticResource DemoDataViewModel}}">

 

        </mvvmCharting:SeriesChart>

        <GroupBox Header="Options" 
                  Grid.Row="1"
                  Margin="20" 
                  HorizontalAlignment="Left"
                  Padding="9">
            <StackPanel >
                <CheckBox Content="ShowSeriesLine" IsChecked="{Binding Source={StaticResource DemoDataViewModel}, Path=ShowSeriesLine, Mode=TwoWay}"/>
                <CheckBox Content="ShowSeriesScatter" IsChecked="{Binding Source={StaticResource DemoDataViewModel}, Path=ShowSeriesPoints, Mode=TwoWay}"/>
            </StackPanel>
        </GroupBox>







    </Grid>
</UserControl>
